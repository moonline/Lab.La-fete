{% extends 'base.html.twig' %}

{% block body %}
	{% embed "components/event.html.twig" with {
		event: event
	} %}{% endembed %}

	{% embed "components/content-article.html.twig" %}
		{% block title %}
			Comments
		{% endblock %}

		{% block content %}
			{% embed "components/content-article.html.twig" %}
				{% block content %}
					{{ form(commentForm) }}
				{% endblock %}
			{% endembed %}

			{% for comment in event.getComments() %}
				{% embed "components/comment.html.twig" with {
					comment: comment
				} %}{% endembed %}
			{% endfor %}
		{% endblock %}
	{% endembed %}
{% endblock %}
